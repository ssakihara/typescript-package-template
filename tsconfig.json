{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "#app/*": ["./src/features/*"],
      "@/*": ["./src/*"]
    },
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "sourceMap": false,
    "outDir": "./dist",
    "declarationDir": "./types",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": ["./node_modules/**/*", "./dist/**/*", "./types/**/*"],
  "include": ["./src/**/*", "./tests/**/*"]
}
