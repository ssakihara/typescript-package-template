{
  "name": "@ssakihara/typescript-package-template",
  "version": "1.1.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "repository": "https://github.com/ssakihara/typescript-package-template",
  "files": [
    "dist",
    "types"
  ],
  "license": "MIT",
  "engines": {
    "node": "^14.18.0 || >=16.0.0"
  },
  "packageManager": "pnpm@8.1.0",
  "volta": {
    "node": "18.15.0"
  },
  "scripts": {
    "prepare": "husky install && pnpm build",
    "commit": "git-cz",
    "docs": "typedoc src/ && vite --config ./vite.doc.config.js",
    "lint-staged": "lint-staged",
    "lint": "eslint --fix --ignore-path .gitignore '**/*.{js,ts}'",
    "format": "prettier --write '**/*.{js,ts,json,md}'",
    "semantic-release": "semantic-release -e ./release.config.cjs",
    "build": "tsc && vite build",
    "test": "pnpm test:unit && pnpm test:e2e",
    "test:unit": "jest",
    "test:e2e": "playwright test"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/ssakihara"
  },
  "dependencies": {
    "dotenv": "16.0.3"
  },
  "devDependencies": {
    "@babel/eslint-parser": "7.21.3",
    "@commitlint/cli": "17.5.1",
    "@commitlint/config-conventional": "17.4.4",
    "@playwright/test": "1.32.1",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/commit-analyzer": "9.0.2",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "8.0.7",
    "@semantic-release/npm": "10.0.2",
    "@semantic-release/release-notes-generator": "10.0.3",
    "@types/jest": "29.5.0",
    "@types/node": "18.15.11",
    "@typescript-eslint/eslint-plugin": "5.57.0",
    "@typescript-eslint/parser": "5.57.0",
    "eslint": "8.37.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-typescript-sort-keys": "2.3.0",
    "git-cz": "4.9.0",
    "husky": "8.0.3",
    "jest": "29.5.0",
    "lint-staged": "13.2.0",
    "playwright": "1.32.1",
    "prettier": "2.8.7",
    "prettier-plugin-organize-imports": "3.2.2",
    "semantic-release": "21.0.0",
    "ts-jest": "29.0.5",
    "ts-node": "10.9.1",
    "typedoc": "0.23.28",
    "typescript": "4.9.5",
    "vite": "4.2.1",
    "vite-tsconfig-paths": "4.0.7"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
