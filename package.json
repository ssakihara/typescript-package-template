{
  "name": "@ssakihara/typescript-package-template",
  "version": "1.1.1",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "repository": "github:ssakihara/typescript-package-template",
  "files": [
    "dist"
  ],
  "license": "MIT",
  "engines": {
    "node": "^14.18.0 || >=16.0.0"
  },
  "packageManager": "pnpm@8.2.0",
  "volta": {
    "node": "18.15.0"
  },
  "scripts": {
    "prepare": "husky install && pnpm build",
    "clean": "rimraf dist",
    "commit": "git-cz",
    "docs": "typedoc src/ && vite --config ./vite.doc.config.ts",
    "lint-staged": "lint-staged",
    "lint": "eslint --fix --ignore-path .gitignore '**/*.{js,ts}'",
    "format": "prettier --write '**/*.{js,ts,json,md}'",
    "semantic-release": "semantic-release -e ./release.config.cjs",
    "build": "pnpm clean && tsc --project tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "test": "pnpm test:unit && pnpm test:e2e",
    "test:unit": "vitest run",
    "test:e2e": "playwright test"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/ssakihara"
  },
  "dependencies": {
    "dotenv": "16.3.1",
    "playwright": "1.37.1"
  },
  "devDependencies": {
    "@babel/eslint-parser": "7.22.9",
    "@commitlint/cli": "17.6.7",
    "@commitlint/config-conventional": "17.6.7",
    "@playwright/test": "1.36.2",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/commit-analyzer": "10.0.1",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "9.0.4",
    "@semantic-release/npm": "10.0.4",
    "@semantic-release/release-notes-generator": "11.0.4",
    "@types/node": "20.4.5",
    "@typescript-eslint/eslint-plugin": "5.62.0",
    "@typescript-eslint/parser": "5.62.0",
    "eslint": "8.46.0",
    "eslint-config-prettier": "8.9.0",
    "eslint-plugin-typescript-sort-keys": "2.3.0",
    "git-cz": "4.9.0",
    "husky": "8.0.3",
    "lint-staged": "13.2.3",
    "prettier": "2.8.8",
    "prettier-plugin-organize-imports": "3.2.3",
    "rimraf": "5.0.1",
    "semantic-release": "21.0.7",
    "ts-node": "10.9.1",
    "tsc-alias": "1.8.7",
    "tsconfig-paths": "4.2.0",
    "typedoc": "0.24.8",
    "typescript": "5.1.6",
    "vite": "4.4.7",
    "vite-plugin-dts": "3.4.0",
    "vite-tsconfig-paths": "4.2.0",
    "vitest": "0.33.0"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
